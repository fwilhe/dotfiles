[user]
    name = Florian Wilhelm

[include]
    path = ~/.gitconfig.d/userdetails

[color]
    ui = auto

[credential]
    helper = cache --timeout=3600

[push]
    default = simple

[alias]
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    ls = log --decorate --pretty=oneline --abbrev-commit
    lss = log -3
    br = branch
    ci = commit
    co = checkout
    coum = checkout -B master upstream/master
    fcuml = "!git fetch upstream; git coum; git log"
    st = status -s
    fa = fetch --all
    cp = cherry-pick
    rb = rebase
    uncommit = reset --soft HEAD^
    unstage = reset HEAD
    prune-all-remotes = !git remote | xargs git remote prune
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -

[branch]
    autosetuprebase = always
[push]
    default = current

[core]
	editor = vim
	excludesfile = ~/.dotfiles/gitignore

[url "git@github.com:"]
    insteadOf = gh:
